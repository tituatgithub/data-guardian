{
  "manifest_version": 3,
  "name": "Data Guardian",
  "version": "0.3.0",
  "description": "Privacy scanner â€” detects trackers, pixels, fingerprinting, and risky scripts.",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "cookies",
    "webRequest",
    "declarativeNetRequest",
    "alarms"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },

  "web_accessible_resources": [
    {
      "resources": ["icons/*", "blocklist.txt"],
      "matches": ["<all_urls>"]
    }
  ]
}
